<Application x:Class="SolarPanelPark.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:SolarPanelPark.ViewModels"
             xmlns:views ="clr-namespace:SolarPanelPark.Views"
             xmlns:local="clr-namespace:SolarPanelPark">
    <Application.Resources>
        <ResourceDictionary>

            <DataTemplate DataType="{x:Type viewmodels:HomePageViewModel}">
                <views:HomePage/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewmodels:SolarParkViewModel}">
                <views:SolarParkView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
